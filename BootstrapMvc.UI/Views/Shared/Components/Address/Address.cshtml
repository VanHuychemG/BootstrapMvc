@using BootstrapMvc.UI.ViewModels
@model AddressViewModel

@Html.AntiForgeryToken()

<fieldset>
    <legend>Address</legend>
</fieldset>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <label asp-for="AddressLine1" class="col-lg-2 control-label"></label>
    <div class="col-lg-8">
        <input asp-for="AddressLine1" class="form-control" />
        <span asp-validation-for="AddressLine1" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="AddressLine2" class="col-lg-2 control-label"></label>
    <div class="col-lg-8">
        <input asp-for="AddressLine2" class="form-control" />
        <span asp-validation-for="AddressLine2" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="ZipCode" class="col-lg-2 control-label"></label>
    <div class="col-lg-8">
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="City" class="col-lg-2 control-label"></label>
    <div class="col-lg-8">
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="State" class="col-lg-2 control-label"></label>
    <div class="col-lg-8">
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="Country" class="col-lg-2 control-label"></label>
    <div class="col-lg-8">
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-lg-8 col-lg-offset-2">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</div>